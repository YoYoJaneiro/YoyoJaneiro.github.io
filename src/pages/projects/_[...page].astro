---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
import type { ProjectSchema } from "../../content/config";
import { getCollection } from "astro:content";
import dayjs from "dayjs";

interface Pages {
	data: ProjectSchema[];
}

export async function getStaticPaths({ paginate }) {
	const projects = await getCollection("projects");
	return paginate(projects, { pageSize: 10 });
}

interface Props {
	page: Pages;
}

const { page } = Astro.props;

page.data.sort((a: ProjectSchema, b: ProjectSchema) => {
	if (a.data.order === b.data.order) {
		const aDate = dayjs(a.data.creationDate);
		const bDate = dayjs(b.data.creationDate);
		return bDate - aDate;
	}
	return a.data.order - b.data.order;
});
---

<BaseLayout title="All Projects">
	<div>
		<div class="text-3xl w-full font-bold mb-5">Projects</div>
	</div>

	<ul>
		{
			page.data.sort().map((project: ProjectSchema) => (
				<>
					<HorizontalCard
						title={project.data.title}
						img={project.data.heroImage}
						desc={project.data.description}
						url={"/projects/" + project.slug}
						target="_self"
					/>
					<div class="divider my-0" />
				</>
			))
		}
	</ul>
</BaseLayout>
